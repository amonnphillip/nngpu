<UserControl x:Class="nngpuVisualization.controls.NnOutput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nngpuVisualization.controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300"
             x:Name="NnOutputControl" 
             HorizontalAlignment="Stretch">
    <Grid Width="auto" Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Output" ></TextBlock>
        <Canvas x:Name="BarContainer" Background="Coral" Grid.Row="1" VerticalAlignment="Center" Height="100" HorizontalAlignment="Stretch"></Canvas>
    </Grid>
</UserControl>
